<Window x:Class="WebAPI_Client_Assistant.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebAPI_Client_Assistant"
        mc:Ignorable="d"
        
        Title="HealthCare - Assistant" Height="400" Width="300" FontSize="14" Background="#9F3B25">
    <Border Background="#403A39" CornerRadius="20" Margin="20">
        <StackPanel Margin="25">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" Margin="0 20 0 0"/>
            <TextBox x:Name="userName" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox x:Name="passWord" Background="#545d6a" Foreground="White" FontSize="18" />
            <Button x:Name="submitButton" Content="Submit" Background="#545d6a" Foreground="White" Margin="60 40" Click="submitButton_Click"/>
        </StackPanel>
    </Border>
</Window>
